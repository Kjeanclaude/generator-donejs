<html>
  <head>
    <title>{{title}}</title>
    {{asset "css"}}
  </head>
  <body>
    <can-import from="<%= folder %>/styles.less!" />
    <can-import from="<%= folder %>/app" [.]="{value}" />

    <h1>{{message}}</h1>

    {{asset "inline-cache"}}

    {{#isProduction}}
      <script src="/node_modules/steal/steal.production.js"
        main="<%= short %>/index.stache!done-autorender"></script>
    {{else}}
      <script src="/node_modules/steal/steal.js"></script>
    {{/isProduction}}
  </body>
</html>
